                </p>
            </div>
        </footer>
        <!-- footer section -->
        <!-- jQuery -->
        <script src="js/jquery-3.4.1.min.js"></script>
        <script src="~/Scripts/js/jquery-3.4.1.min.js"></script>
        <!-- bootstrap js -->
